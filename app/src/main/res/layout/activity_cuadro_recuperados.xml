<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_nro"
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp"
        android:textAppearance="?android:textAppearanceListItem"
        android:textColor="#000000"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/txt_cantidad_recuperada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nro"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="?android:attr/listPreferredItemPaddingStart"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp"
        android:hint="INGRESAR CANTIDAD"
        android:inputType="number"
        android:textAppearance="?android:textAppearanceListItem"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_fecha"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/txt_cantidad_recuperada"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="11dp"
        android:hint=" FECHA DE CONSUMO PREFERENTE"
        android:textAppearance="?android:textAppearanceListItem"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_registrar_cuadro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_fecha"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="41dp"
        android:text="REGISTRAR" />
</RelativeLayout>